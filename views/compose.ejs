<%- include("partials/header") -%>

<h1>Compose</h1>


<form action="/compose" method="post">
  <div class="form-group">
    <label for="newPost">Title</label>
    <input class="form-control" type="text" name="newPostTitle">
    <label for="newPostBody">Post</label>
    <textarea class="form-control" name="newPostBody" rows="6" cols="160"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

